.n-l-colmb20.n-cart--payway
	.n-title__wrap
		h2.n-title--18 請選擇付款方式
	ul.n-tab.n-tab--lv2#payTab
		li.current
			a(href="#payItem1", title="信用卡") 信用卡
		li
			a(href="#payItem2", title="ATM/WebATM/中信網銀") ATM/WebATM/中信網銀
		li
			a(href="#payItem3", title="超商取貨付款") 超商取貨付款
		li
			a(href="#payItem4", title="貨到付款") 貨到付款
	.n-l-bgw-md.n-cart__second#payItem1
		.n-left.col-9.n-cart--left
			ul.n-form__ctrlgroup
				-var payWays = [ {payName: '一次付清', price: '3,566'}, {payName: '紅利折抵', price: '3,566'},{payName: '3期付款，每期', price: '3,566'},{payName: '6期付款，每期', price: '3,566'},{payName: '12期付款，每期', price: '3,566'}]
				each payWay, i in payWays
					li
						input(id="payWay" + (i + 1), type="radio", name="payWay")
						label(for="payWay" + (i + 1))= payWay.payName
						span.n-price--16 $
							span= payWay.price
			.n-cart--second-box
				p.n-l-colmb15 輸入 / 選擇 信用卡
				ul.n-l-colmb15.n-card__list
					li.n-has--data
						.n-card__head
							img.n-pic(src="Resource/img201703/cart/bank_logo@1x_ctbc.png", alt="玉山銀行")
							span 玉山銀行
							a.n-right.n-card__close(href="", title="關閉")
								i.n-icon--close
						.n-card__body
							span 1111
							span 2222
							span 4444
							span 5555
						.n-card__foot
							span.n-pr--medium 有效期期限已過 
							img.n-right(src="Resource/img201703/cart/visa.png", alt="visa")
					li.n-has--data.n-has--disable
						.n-card__head
							img.n-pic(src="Resource/img201703/cart/bank_logo@1x_ctbc.png", alt="玉山銀行")
							span 玉山銀行
							a.n-right.n-card__close(href="", title="關閉")
								i.n-icon--close
						.n-card__body
							span 1111
							span 2222
							span 4444
							span 5555
						.n-card__foot
							span.n-pr--medium 有效期期限已過 
							img.n-right(src="Resource/img201703/cart/visa.png", alt="visa")
					li.current
						a(href="#", title="新增信用卡")
							.n-icon--add-btn
								span
								span
				.n-card__added
					.n-l-colmb15.n-form--inline.n-card__num
						.n-card__caption
							span.n-title--13 信用卡卡號
							span  -- 限台灣核發之信用卡
						each cardInput, cardIndex in ['欄位資訊錯誤', '欄位資訊錯誤', '欄位資訊錯誤', '欄位資訊錯誤']
							.n-form__box
								input.n-form--control(type="text", id="cardNumber" + (cardIndex + 1), maxlength="4")
								p.n-form--error= cardInput
					.n-l-colmb15.n-form--inline.n-card__date
						.n-title--13 有效期限
